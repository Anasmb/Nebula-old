<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".PasswordActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageButton
            android:id="@+id/backBtnPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:background="#00494848"
            android:onClick="openPrevious"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/ssidText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/allerta"
            android:text="SSID NAME"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pswdEditTxt"
            style="@style/Widget.AppCompat.Light.AutoCompleteTextView"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="30dp"
            android:backgroundTint="@color/purple_200"
            android:fontFamily="@font/allerta"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FFFEFE"
            android:textColorHint="#3EFFFFFF"
            android:visibility="visible" />

        <Button
            android:id="@+id/connectbtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="15dp"
            android:backgroundTint="@color/defult_8"
            android:clickable="false"
            android:fontFamily="@font/roboto_bold"
            android:onClick="manageWifiInfo"
            android:text="Connect"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/connectingProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="25dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/doneBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="50dp"
            android:background="@color/teal_200"
            android:fontFamily="@font/roboto_bold"
            android:onClick="openMainActivity"
            android:text="Done"
            android:textColor="#FFFFFF"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/panelImage"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="15dp"
            android:visibility="visible"
            app:srcCompat="@drawable/panel_green" />

        <TextView
            android:id="@+id/readyToUseTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="50dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Nebula is ready to use, the light should be green"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:visibility="visible" />


    </LinearLayout>





</LinearLayout>