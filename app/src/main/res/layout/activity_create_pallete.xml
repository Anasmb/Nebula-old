<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".CreatePallete"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/createPalletetoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/reply_blue_600"
        android:minHeight="?attr/actionBarSize"
        app:title="Create Pallete"
        app:titleTextColor="@color/white" />

<!--    <ImageButton-->
<!--        android:id="@+id/palleteBackBtn"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginVertical="16dp"-->
<!--        android:layout_marginHorizontal="16dp"-->
<!--        android:background="@color/foreground_color"-->
<!--        android:onClick="openPrevious"-->
<!--        android:visibility="visible"-->
<!--        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

    <EditText
        android:id="@+id/namePallete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="32dp"
        android:layout_marginHorizontal="38dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/greyish"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:hint="Pallete name"
        android:inputType="textPersonName"
        android:textColor="@color/foreground_color"
        android:textColorHint="@color/greyish" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="3"
        app:rowCount="2">
    </androidx.gridlayout.widget.GridLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addPalleteBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="100dp"
            android:layout_marginVertical="32dp"
            app:cornerRadius="3dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto_bold"
            android:text="Finish"
            android:textColor="@color/white"
            android:visibility="visible" />

    </LinearLayout>






</LinearLayout>