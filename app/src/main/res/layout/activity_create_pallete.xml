<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".CreatePallete"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back_img_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/back_button_color" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:text="Create Pallete"
            android:textSize="24sp"
            android:textColor="@color/foreground_color"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </RelativeLayout>

<!--    <ImageButton-->
<!--        android:id="@+id/palleteBackBtn"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginVertical="16dp"-->
<!--        android:layout_marginHorizontal="16dp"-->
<!--        android:background="@color/foreground_color"-->
<!--        android:onClick="openPrevious"-->
<!--        android:visibility="visible"-->
<!--        app:srcCompat="@drawable/ic_baseline_arrow_back_24" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">

    <EditText
        android:id="@+id/namePallete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginVertical="32dp"
        android:layout_marginHorizontal="38dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/gray"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:hint="Pallete name"
        android:inputType="textPersonName"
        android:textColor="@color/foreground_color"
        android:textColorHint="@color/gray" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnCount="3"
        app:rowCount="2">
    </androidx.gridlayout.widget.GridLayout>


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addPalleteBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginVertical="40dp"
        app:cornerRadius="3dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/roboto_bold"
        android:text="Finish"
        android:textColor="@color/white"
        android:visibility="visible" />




</LinearLayout>