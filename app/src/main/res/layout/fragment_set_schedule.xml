<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/createScheduletoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/reply_blue_600"
        android:minHeight="?attr/actionBarSize"
        app:title="Create Schedule"
        app:titleTextColor="@color/white" />
    
<TimePicker
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:timePickerMode="spinner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/roboto"
            android:text="Pallete"
            android:textColor="@color/foreground_color"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/roboto"
            android:text="Normal"
            android:textColor="@color/greyish"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:tint="@color/greyish"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/roboto"
            android:text="Mode"
            android:textColor="@color/foreground_color"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/roboto"
            android:text="Fade"
            android:textColor="@color/greyish"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:tint="@color/greyish"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/roboto"
            android:text="Repeat"
            android:textColor="@color/foreground_color"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:fontFamily="@font/roboto"
            android:text="Once"
            android:textColor="@color/greyish"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:tint="@color/greyish"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/roboto"
            android:text="Power"
            android:textColor="@color/foreground_color"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/scheduleSwitchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="center_vertical"
            app:thumbTint="@color/thumb_color_off"
            app:trackTint="@color/track_color_off" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/roboto"
            android:text="Brightness"
            android:textColor="@color/foreground_color"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <com.google.android.material.slider.Slider
            android:id="@+id/scheduleBrightnessSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:value="0"
            android:valueFrom="0"
            android:valueTo="100"
            android:enabled="false"
            app:labelBehavior="gone"
            app:thumbColor="@color/white"
            app:thumbStrokeColor="#707070"
            app:thumbStrokeWidth="1dp"
            app:trackColorActive="@color/button_color"
            app:trackColorInactive="@color/greyish"
            app:trackHeight="8dp" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setScheduleRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addScheduleBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/button_color"
            android:fontFamily="@font/roboto_bold"
            android:text="Finish"
            android:textColor="@color/white"
            android:visibility="visible"
            app:cornerRadius="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>



</LinearLayout>