<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#9A121212"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="16dp"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardColor1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="0dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
           app:cardForegroundColor="@color/light_blue_600"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardColor4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="0dp"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp"
            app:cardForegroundColor="#3EFFEC"
            />


    </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardColor2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="0dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardForegroundColor="#E5034B"
                />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardColor5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="0dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardForegroundColor="#6200FF"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView

                android:id="@+id/cardColor3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="0dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardForegroundColor="#FF480E"
                />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardColor6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="0dp"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                app:cardForegroundColor="#FFC107"
                />


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/txtPanelName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:text="@string/app_name"
        android:textColor="#ffff"
        android:gravity="center"
        android:textSize="19dp"
        android:textStyle="bold"
        />

</LinearLayout>