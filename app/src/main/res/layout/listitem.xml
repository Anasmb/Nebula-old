<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:layout_margin="10dp"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardColor1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/emitColor"
            />
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardColor4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/light_blue_600"
            />


    </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardColor2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#D81B60"
                />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardColor5"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#5E35B1"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.google.android.material.card.MaterialCardView

                android:id="@+id/cardColor3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#F4511E"
                />
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardColor6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#FB8C00"
                />


        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/txtPanelName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:text="@string/app_name"
        android:textColor="#ffff"
        android:gravity="center"
        android:textSize="19dp"
        android:textStyle="bold"
        />

</LinearLayout>